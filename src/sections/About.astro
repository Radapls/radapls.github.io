---
import ProfilePic from '@assets/img/juan.webp';
import CurriculumVitae from '@assets/documents/CV_Juan_Felipe_Rada.pdf';

import { useTranslations, type Lang } from 'src/i18n';
import { Image } from 'astro:assets';

const t = useTranslations(Astro.currentLocale as Lang);
---

<!--==================== ABOUT ====================-->
<section class="about section" id="About">
	<h2 class="section__title">
		{
			t({
				en: 'About me',
				es: 'Acerca de mí',
				'pt-br': 'Sobre mim',
			})
		}
	</h2>
	<span class="section__subtitle"></span>

	<div class="about__container container grid">
		<div class="about__data">
			<p class="about__description">
				{
					t({
						en: "My name is Juan Felipe Rada, currently working as a Frontend developer focusing on backoffice platforms, whitelabel implementations and content static sites.",
						es: 'Mi nombre es Juan Felipe Rada, actualmente trabajo como desarrollador Frontend con enfoque en paneles administrativos en linea, implementaciónes whitelabel y paginas de contenido estático.',
						'pt-br':
							'Olá meu nome é Juan Felipe Rada, atualmente trabalho como desenvolvedor Frontend enfocado em plataformas backoffice, implementações whitelabel e paginas de conteúdo estático.'
					})
				}
			</p>

			<p class="about__description">
				{
					t({
						en: 'Sometimes I write',
						es: 'Algunas veces escribo',
						'pt-br': 'Às vezes escrevo',
					})
				}
				<a
					data-astro-reload
					class="about__description__link"
					href="/blog"
					role="link"
					aria-roledescription={t({
						en: 'Personal blog link',
						es: 'Enlace al blog personal',
						'pt-br': 'Link blog pessoal',
					})}
				>
					{
						t({
							en: 'on my personal blog',
							es: 'en mi blog personal',
							'pt-br': 'no meu blog pessoal',
						})
					}
				</a>
			</p>

			<div class="about__buttons">
				<a rel="nofollow" type="file" href={CurriculumVitae} class="button button--flex">
					<p>
						{
							t({
								en: 'Download CV',
								es: 'Descargar CV',
								'pt-br': 'Baixar CV',
							})
						}
					</p>
					<i class="uil uil-download-alt button__icon"></i>
				</a>
			</div>
		</div>
	</div>
</section>

<style>
	/*==================== ABOUT ====================*/
	.about__img {
		border-radius: 0.5rem;
		justify-self: center;
		align-self: center;
	}
	.about__description {
		text-align: left;
		margin-bottom: var(--mb-2-5);
	}
	.about__info {
		display: flex;
		justify-content: space-between;
		margin-bottom: var(--mb-2-5);
		gap: 1rem;
	}
	.about__info-title {
		font-size: var(--h2-font-size);
		font-weight: var(--font-semi-bold);
		color: var(--title-color);
	}
	.about__info-name {
		font-size: var(--smaller-font-size);
	}
	.about__info-title,
	.about__info-name {
		display: block;
		text-align: center;
	}
	.about__buttons {
		display: flex;
		justify-content: center;
	}
	.about__description__link {
		text-decoration: underline;
		color: var(--first-color);
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.about__description__link:hover,
	.about__description__link:focus {
		color: var(--first-color-alt);
		text-decoration-thickness: 2px;
	}

	.about__description__link:focus-visible {
		outline: 2px solid var(--first-color);
		outline-offset: 2px;
	}
</style>
