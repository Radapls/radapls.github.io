---
import Illustration from '@assets/img/illustration.webp';
import Flag from '@components/Flag.astro';
import { Image } from 'astro:assets';
import { LINKEDIN, GITHUB } from 'src/consts';
import { useTranslations, type Lang } from 'src/i18n';

const t = useTranslations(Astro.currentLocale as Lang);
---

<!--==================== HOME ====================-->
<section class="home section" id="Home">
	<div class="home__container container grid">
		<div class="home__content grid">
			<div class="home__social">
				<a href={LINKEDIN} target="_blank" class="home__social-icon" aria-label="LinkedIn profile">
					<i class="uil uil-linkedin" aria-hidden="true"></i>
				</a>
				<a href={GITHUB} target="_blank" class="home__social-icon" aria-label="GitHub profile">
					<i class="uil uil-github" aria-hidden="true"></i>
				</a>
			</div>
			<Image
				class="illustration-image floating"
				alt="Ilustracion digitial Juan Felipe Rada"
				src={Illustration}
				width={1252}
				height={1248}
				draggable={false}
				loading={'eager'}
				decoding="async"
			/>

			<div class="home__data">
				<div style="display: flex; align-items: center; gap: 8px;">
					<h1 class="home__title">
						{
							t({
								en: 'Hello!',
								es: 'Hola!',
								'pt-br': 'Ola!',
							})
						}
					</h1>
					<h1 id="waveElement" class="wave">üëãüèº</h1>
				</div>
				<h2 class="home__eyebrow">
					{
						t({
							en: "I'm Juan Felipe",
							es: 'Soy Juan Felipe',
							'pt-br': 'Sou Juan Felipe',
						})
					}
				</h2>
				<h3 class="home__subtitle">
					{
						t({
							en: 'Software, Politics, Art',
							es: 'Software, Pol√≠tica, Arte',
							'pt-br': 'Software, Pol√≠tica, Arte',
						})
					}
				</h3>
				<p class="home__description">
					{
						t({
							en: 'Creating things and experiences one line at a time',
							es: '"No se puede juzgar el pasado, con la sabiduria del presente"',
							'pt-br': 'Criando coisas e experi√™ncias, uma linha de cada vez',
						})
					}
				</p>
				<a href="#Contact" class="button button--flex heartbeat">
					{
						t({
							en: 'Contact Me',
							es: 'Cont√°ctame',
							'pt-br': 'Contato',
						})
					}
				</a>
			</div>
		</div>
		<Flag />
		<div class="home__scroll">
			<a href="#About" class="home__scroll-button">
				<i class="uil uil-mouse home__scroll-mouse"></i>
				<span class="home__scroll-name">
					{
						t({
							en: 'Scroll down',
							es: 'Desliza hacia abajo',
							'pt-br': 'Role para baixo',
						})
					}
				</span>
				<i class="uil uil-arrow-down home_scroll-arrow"></i>
			</a>
		</div>
	</div>
</section>

<style>
	.illustration-image {
		order: 1;
		justify-self: center;
		filter: drop-shadow(0 0 50px var(--first-color));
	}
	.wave {
		display: inline-block;
		animation: wave 3s;
		transform-origin: 70% 70%;
		font-size: 50px;
		cursor: pointer;
	}

	.wave:hover {
		animation: wave 3s infinite;
	}
	.wave:not(:hover) {
		animation: none;
	}

	@keyframes wave {
		0% {
			transform: rotate(0deg);
		}
		10% {
			transform: rotate(14deg);
		}
		20% {
			transform: rotate(-8deg);
		}
		30% {
			transform: rotate(14deg);
		}
		40% {
			transform: rotate(-4deg);
		}
		50% {
			transform: rotate(10deg);
		}
		60% {
			transform: rotate(0deg);
		}
		100% {
			transform: rotate(0deg);
		}
	}

	.floating {
		display: inline-block;
		animation: float 3s ease-in-out infinite;
		cursor: pointer;
	}

	.heartbeat {
		-webkit-animation: heartbeat 3s cubic-bezier(0.55, 0.085, 0.68, 0.53) infinite both;
		animation: heartbeat 3s cubic-bezier(0.55, 0.085, 0.68, 0.53) infinite both;
	}

	/* ----------------------------------------------
 * Generated by Animista on 2025-5-29 11:13:3
 * Licensed under FreeBSD License.
 * See http://animista.net/license for more info.
 * w: http://animista.net, t: @cssanimista
 * ---------------------------------------------- */

	/**
 * ----------------------------------------
 * animation heartbeat
 * ----------------------------------------
 */
	@-webkit-keyframes heartbeat {
		from {
			-webkit-transform: scale(1);
			transform: scale(1);
			-webkit-transform-origin: center center;
			transform-origin: center center;
			-webkit-animation-timing-function: ease-out;
			animation-timing-function: ease-out;
		}
		10% {
			-webkit-transform: scale(0.91);
			transform: scale(0.91);
			-webkit-animation-timing-function: ease-in;
			animation-timing-function: ease-in;
		}
		17% {
			-webkit-transform: scale(0.98);
			transform: scale(0.98);
			-webkit-animation-timing-function: ease-out;
			animation-timing-function: ease-out;
		}
		33% {
			-webkit-transform: scale(0.87);
			transform: scale(0.87);
			-webkit-animation-timing-function: ease-in;
			animation-timing-function: ease-in;
		}
		45% {
			-webkit-transform: scale(1);
			transform: scale(1);
			-webkit-animation-timing-function: ease-out;
			animation-timing-function: ease-out;
		}
	}
	@keyframes heartbeat {
		from {
			-webkit-transform: scale(1);
			transform: scale(1);
			-webkit-transform-origin: center center;
			transform-origin: center center;
			-webkit-animation-timing-function: ease-out;
			animation-timing-function: ease-out;
		}
		10% {
			-webkit-transform: scale(0.91);
			transform: scale(0.91);
			-webkit-animation-timing-function: ease-in;
			animation-timing-function: ease-in;
		}
		17% {
			-webkit-transform: scale(0.98);
			transform: scale(0.98);
			-webkit-animation-timing-function: ease-out;
			animation-timing-function: ease-out;
		}
		33% {
			-webkit-transform: scale(0.87);
			transform: scale(0.87);
			-webkit-animation-timing-function: ease-in;
			animation-timing-function: ease-in;
		}
		45% {
			-webkit-transform: scale(1);
			transform: scale(1);
			-webkit-animation-timing-function: ease-out;
			animation-timing-function: ease-out;
		}
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}
</style>

<script is:inline>
	document.addEventListener('DOMContentLoaded', () => {
		const waveElement = document.getElementById('waveElement');

		if (waveElement) {
			waveElement.addEventListener('click', () => {
				waveElement.classList.add('animate');
				setTimeout(() => {
					waveElement.classList.remove('animate');
				}, 5000);
			});
		}
	});
</script>
