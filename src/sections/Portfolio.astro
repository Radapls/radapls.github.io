---
import Pokedex from '@assets/img/pokedex.webp';
import World from '@assets/img/world.webp';
import CasaNostra from '@assets/img/casa-nostra.webp';
import SpaceInvaders from '@assets/img/space-invaders.webp';
import Roulette from '@assets/img/roulette.webp';

import Cunctae from '@assets/img/c.svg';

import PortfolioCard from '@components/PortfolioCard.astro';

import { useTranslations, type Lang } from 'src/i18n';

const t = useTranslations(Astro.currentLocale as Lang);
---

<!--==================== PORTFOLIO ====================-->
<section class="portfolio section" id="Portfolio" aria-labelledby="portfolio-title">
	<h2 class="section__title" id="portfolio-title">
		<span aria-hidden="true">游닄</span>
		{
			t({
				en: 'Portfolio',
				es: 'Portafolio',
				'pt-br': 'Portf칩lio',
			})
		}
	</h2>
	<span class="section__subtitle" aria-roledescription="doc-subtitle">
		{
			t({
				en: 'Some recent work',
				es: 'Algunos trabajos recientes',
				'pt-br': 'Alguns trabalhos recentes',
			})
		}
	</span>
	<div class="portafolio__container container">
		<div class="card-grid">
			<PortfolioCard
				bgImage={Roulette}
				title={t({
					en: 'Roulette Runner',
					es: 'Ruleta de corredores',
					'pt-br': 'Roleta de corrida',
				})}
				description={t({
					en: 'Win your next run distance!. Project in Monkey C for Garmin Devices',
					es: 'Gana tu proxima distancia de carrera!. Projecto es Monkey C para dispositivos Garmin',
					'pt-br':
						'Ganhe sua proxima distancia de carreira!. Projeto em Monkey C para dispositivos Garmin',
				})}
				link="https://github.com/Radapls/roulette"
			/>
			<PortfolioCard
				bgImage={Cunctae}
				title={t({
					en: 'Cunctum UI',
					es: 'Cunctum UI',
					'pt-br': 'Cunctum UI',
				})}
				description={t({
					en: 'An Open Source Design system for Cunctae.com',
					es: 'Un sistema de dise침o de c칩digo abierto para Cunctae.com',
					'pt-br': 'Um sistema de design de c칩digo aberto para Cunctae.com',
				})}
				link="https://678ffb48e5954eaf5a341943-xxgqcfupsk.chromatic.com/"
			/>
			<PortfolioCard
				bgImage={CasaNostra}
				title={t({
					en: 'A casa nostra',
					es: 'A casa nostra',
					'pt-br': 'A casa nostra',
				})}
				description={t({
					en: 'A real estate agency for the home of your dreams, built with React, Firebase and Tailwindcss',
					es: 'Una agencia inmobiliaria para la casa de tus sue침os, construida con React, Firebase y Tailwindcss',
					'pt-br':
						'Uma ag칡ncia imobili치ria para a casa dos seus sonhos, constru칤da com React, Firebase e Tailwindcss',
				})}
				link="https://a-casa-nostra.vercel.app/"
			/>
			<PortfolioCard
				bgImage={SpaceInvaders}
				title={t({
					en: 'Space Invaders',
					es: 'Space Invaders',
					'pt-br': 'Space Invaders',
				})}
				description={t({
					en: 'Space Invaders project created with JavaScript and HTML Canvas',
					es: 'Proyecto Space Invaders creado con JavaScript y HTML Canvas',
					'pt-br': 'Projeto Space Invaders criado com JavaScript e HTML Canvas',
				})}
				link="https://radapls.github.io/space-invaders/"
			/>
		</div>
	</div>
</section>

<style>
	.portafolio__container {
		overflow: initial;
	}
	.portafolio__title {
		opacity: 0;
		transition: opacity 500ms ease-in-out;
		font-size: var(--h3-font-size);
		margin-bottom: var(--mb-0-5);
		color: var(--body-color);
		font-size: var(--h3-font-size);
		line-height: 1.4;
	}
	.portafolio__description {
		opacity: 0;
		transition: opacity 500ms ease-in;
		margin-bottom: var(--mb-0-75);
		color: var(--body-color);
		font-size: var(--normal-font-size);
		margin-bottom: 8px;
	}

	.card-grid {
		display: grid;
		grid-column-gap: 24px;
		grid-row-gap: 24px;
		max-width: 1200px;
		width: 100%;
		grid-template-columns: 1fr 1fr;
		justify-content: center;
		justify-items: center;
	}

	@media screen and (max-width: 768px) {
		.card-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
