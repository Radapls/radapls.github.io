            <div></div>
        </div>
    </div>
</section>

<style>
    .portafolio__container {
        overflow: initial;
    }
    .portafolio__title {
        font-size: var(--h3-font-size);
        margin-bottom: var(--mb-0-5);
        color: var(--body-color);
        font-size: var(--h3-font-size);
        text-shadow: 2px 2px 20px rgb(0, 0, 0, 0.5);
        line-height: 1.4;
    }
    .portafolio__description {
        margin-bottom: var(--mb-0-75);
        color: var(--body-color);
        font-size: var(--normal-font-size);
        margin-bottom: 8px;
    }

    .card {
        width: 300px;
        height: 300px;
        padding: 1rem;
        cursor: pointer;
        border-radius: 0.5rem;
        box-shadow: 0px 8px 16px 0px rgb(0 0 0 / 3%);
        position: relative;
    }

    .card > * + * {
        margin-top: 1.1em;
    }

    .card .card__content {
        color: var(--secondary-color);
        font-size: 0.86rem;
    }

    .card .card__title {
        padding: 0;
        font-size: 1.3rem;
        font-weight: bold;
    }

    .card .card__date {
        color: #6e6b80;
        font-size: 0.8rem;
    }

    /* hover */
    .card:hover .card__title {
        color: var(--primary-color);
        text-decoration: underline;
    }

    .card:hover .card__arrow {
        background: #111;
    }

    .card:hover .card__arrow svg {
        transform: translateX(3px);
    }

    .card-grid {
        display: grid;
        grid-column-gap: 24px;
        grid-row-gap: 24px;
        max-width: 1200px;
        width: 100%;
        justify-content: center;
        justify-items: center;
    }

    .card {
        list-style: none;
        position: relative;
    }

    .card:before {
        content: "";
        display: block;
        padding-bottom: 150%;
        width: 100%;
    }

    .card__background {
        background-size: cover;
        background-position: center;
        border-radius: 24px;
        bottom: 0;
        filter: brightness(0.75) saturate(1.2) contrast(0.85) blur(1px);
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
        transform-origin: center;

        transition:
            filter 200ms linear,
            transform 200ms linear;
    }

    .card:hover .card__background {
        transform: scale(1.05) translateZ(0);
        filter: brightness(0.75) saturate(1.2) contrast(0.5) blur(0);
    }

    .card-grid:hover > .card:not(:hover) .card__background {
        filter: brightness(0.5) saturate(0) contrast(1.2) blur(20px);
    }

    .card__content {
        left: 0;
        padding: 24px;
        position: absolute;
        top: 0;
    }
</style>
