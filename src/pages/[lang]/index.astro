---
import { LOCALES } from "src/i18n";
import Home from "src/sections/Home.astro";
import About from "src/sections/About.astro";

import Layout from "@layouts/Layout.astro";
import Experience from "@sections/Experience.astro";
import Hobbies from "@sections/Hobbies.astro";
import Portfolio from "@sections/Portfolio.astro";
import ContactMe from "@sections/ContactMe.astro";
import CTA from "@sections/CTA.astro";
import Skills from "@sections/Skills.astro";
import Flag from "@components/Flag.astro";

export const getStaticPaths = () =>
  Object.keys(LOCALES).map((lang) => ({
    params: { lang },
  }));
---

<Layout title="Juan Felipe Rada | Portfolio" variant="radapls">
  <Home />
  <Flag/>
  <About />
  <Skills />
  <Experience />
  <Hobbies />
  <Portfolio />
  <CTA />
  <ContactMe />
</Layout>
