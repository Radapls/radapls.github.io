---
import Layout from '@layouts/Layout.astro';

import { LOCALES, useTranslations, type Lang } from 'src/i18n';

const t = useTranslations(Astro.currentLocale as Lang);

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}));
---

<Layout title="Juan Felipe Rada | Thanks!" variant="radapls" withFooter={false} withHeader={false}>
	<main class="thanks-page">
		<section class="thanks-content">
			<h1>
				{
					t({
						en: 'Thank You!',
						es: '¡Gracias!',
						'pt-br': 'Obrigado!',
					})
				}
			</h1>
			<p>
				{
					t({
						en: 'We appreciate your time in filling out the form. Your response has been successfully submitted.',
						es: 'Agradecemos su tiempo para completar el formulario. Su respuesta ha sido enviada con éxito.',
						'pt-br':
							'Agradecemos o seu tempo em preencher o formulário. Sua resposta foi enviada com sucesso.',
					})
				}
			</p>
			<a href="/" class="thanks-button">
				{
					t({
						en: 'Go Back to Home',
						es: 'Volver al Inicio',
						'pt-br': 'Voltar para a Página Inicial',
					})
				}
			</a>
		</section>
	</main>

	<style>
		.thanks-page {
			display: flex;
			justify-content: center;
			align-items: center;
			min-height: 70vh;
			padding: 2rem;
			text-align: center;
		}

		.thanks-content {
			max-width: 600px;
		}

		h1 {
			font-size: 2.5rem;
			color: var(--title-color);
			margin-bottom: 1rem;
		}

		p {
			font-size: 1.25rem;
			color: var(--text-color);
			margin-bottom: 1.5rem;
		}

		.thanks-button {
			display: inline-block;
			background-color: var(--first-color);
			color: #fff;
			padding: 0.75rem 1.5rem;
			border-radius: 5px;
			text-decoration: none;
			font-size: 1rem;
			font-weight: 600;
			transition: background-color 0.3s ease;
		}

		.thanks-button:hover {
			background-color: var(--first-color-second);
		}
	</style>
</Layout>
