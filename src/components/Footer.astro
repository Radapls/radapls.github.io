---
import Logo from "@assets/img/JFR.webp";
import type { BrandType } from 'src/types/variants';

interface Props {
    variant?: BrandType;
}

const { variant } = Astro.props;
---

{
    variant === "radapls" ? (
        <footer class="footer__bg">
            <div class="footer__container">
                <div class="footer__brand-container">
                    <img
                        src={Logo.src}
                        alt="Logo Juan Felipe Rada"
                        draggable="false"
                        class="footer_radapls-brand"
                    />
                    <h3 class="footer__title">Juan Felipe Rada</h3>
                </div>
            </div>
        </footer>
    ) : (
        <footer class="footer__bg">
            <div class="footer__container">
                <img
                    src={Logo.src}
                    alt="Logo Juan Felipe Rada"
                    draggable="false"
                    class="footer_radapls-brand"
                />
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="48"
                    viewBox="0 0 20 48"
                >
                    <g>
                        <path
                            fill="none"
                            stroke="rgb(172,185,200)"
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                            stroke-width="1"
                            d="M10 2.35231505v50"
                        />
                    </g>
                </svg>
                <img
                    src="https://assets.coingecko.com/coins/images/11009/large/wibx_new_logo.png"
                    draggable="false"
                    alt="Wibx Company"
                    class="footer__wibx-brand "
                />
            </div>
        </footer>
    )
}

<style>
    /*==================== FOOTER ====================*/
    .footer {
        padding-top: 2rem;
    }
    .footer__container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 3rem;
    }
    .footer__bg {
        background-color: var(--first-color);
        padding: 3rem 0;
    }

    .footer__title {
        font-size: var(--h2-font-size);
        margin-bottom: var(--mb-0-25);
        display: flex;
        flex-direction: row;
    }

    .footer_radapls-brand,
    .footer__wibx-brand {
        width: 75px;
    }

    .footer__brand-container {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .footer__subtitle {
        font-size: var(--small-font-size);
    }
    .footer__links {
        display: flex;
        row-gap: 1.5rem;
    }
    .footer__links:hover {
        color: var(--first-color-lighter);
    }
    .footer__social {
        font-size: 1.25rem;
        margin-right: var(--mb-1-5);
        align-items: center;
    }
    .footer__social:hover {
        color: var(--first-color-lighter);
    }
    .footer__copy {
        font-size: var(--smaller-font-size);
        text-align: center;
        color: var(--text-color-light);
        margin-top: var(--mb-3);
    }
    .footer__title,
    .footer__subtitle,
    .footer__link,
    .footer__social {
        color: #fff;
    }
</style>
