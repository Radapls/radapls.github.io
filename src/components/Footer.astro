---
import Logo from '@assets/img/JFR.webp';
import { Image } from 'astro:assets';
import type { BrandType } from 'src/types/variants';
import { useTranslations, type Lang } from 'src/i18n';

const t = useTranslations(Astro.currentLocale as Lang);

interface Props {
	variant?: BrandType;
}
---

<footer class="footer__bg">
	<div class="footer__container">
		<div class="footer__brand-container">
			<Image
				class="brand-image"
				src={Logo}
				alt="Logo Juan Felipe Rada"
				draggable="false"
				height={30}
				width={30}
			/>
			<h6 class="footer__title">
				<span>
					&copy; {new Date().getFullYear() + ' '}
				</span>
				Juan Felipe Rada
			</h6>
		</div>
	</div>
	<p class="licenses">
		{
			t({
				en: 'Posts:',
				es: 'Publicaciones:',
				'pt-br': 'Publicações:',
			})
		}
		<a href="https://creativecommons.org/licenses/by-sa/4.0/" aria-label="Posts license type link"
			>CC-BY-SA</a
		> |
		{
			t({
				en: 'Source code:',
				es: 'Código fuente:',
				'pt-br': 'Código fonte:',
			})
		}
		<a
			href="https://github.com/Radapls/radapls.github.io/blob/main/LICENSE"
			aria-label="Source code license type link"
		>
			AGPL-3.0
		</a>
	</p>
</footer>

<style>
	.footer__container {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 3rem;
	}

	.footer__bg {
		padding: 3rem 0;
		position: relative;
	}

	.footer__title {
		font-size: var(--normal-font-size);
		display: inline;
		color: var(--text-color);
	}
	span {
		font-weight: var(--font-medium);
	}

	.footer__brand-container {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.licenses {
		text-align: center;
		font-size: var(--small-font-size);
	}

	:global(.dark) .brand-image {
		filter: grayscale(1) contrast(0.5) brightness(3.5);
	}
</style>
