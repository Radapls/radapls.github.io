---
import Logo from '@assets/img/JFR.webp';
import { Image } from 'astro:assets';
import type { BrandType } from 'src/types/variants';

interface Props {
	variant?: BrandType;
}
---

<footer class="footer__bg">
	<div class="footer__container">
		<div class="footer__brand-container">
			<Image
				class="brand-image"
				src={Logo}
				alt="Logo Juan Felipe Rada"
				draggable="false"
				height={75}
				width={75}
			/>
			<h6 class="footer__title">Juan Felipe Rada</h6>
		</div>
	</div>
</footer>

<style>
	.footer__container {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 3rem;
	}

	.footer__bg {
		padding: 3rem 0;
		position: relative;
	}
	.footer__bg::before {
		background-color: var(--first-color);
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		filter: opacity(0.8);
		z-index: -1;
		box-shadow:  0 0 4px var(--text-color);
	}

	.footer__title {
		font-size: var(--h2-font-size);
		margin-bottom: var(--mb-0-25);
		display: flex;
		flex-direction: row;
		color: var(--text-color);
	}

	.footer__brand-container {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
</style>
