import ThemeIcon from './ThemeIcon.astro';

const t = useTranslations(Astro.currentLocale as Lang);

const currentLocale = (Astro.currentLocale as Lang | undefined) ?? DEFAULT_LOCALE;

interface Props {
	variant?: BrandType;
	noLinks?: boolean;
