<style>
    /*==================== NAV ====================*/

    .locale-switcher {
        font-family: "Poppins";
        border-radius: 4px; /* Bordes redondeados */
        font-size: var(--small-font-size);
        font-weight: var(--font-medium);
        height: 30px;
        padding: 0 15px;
        border: none; /* Quitar bordes por defecto */
    }

    /* show menu */
    .show-menu {
        bottom: 0;
    }

    /* Active link */
    .active-link {
        color: var(--first-color);
    }

    .wibx {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .wibx > a {
