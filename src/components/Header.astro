						<a href="https://wibx.io/" class="nav__logo">
							<Image
								src="https://assets.coingecko.com/coins/images/11009/large/wibx_new_logo.png"
								draggable="false"
								alt="Wibx Company"
								width={35}
								height={35}
							/>
