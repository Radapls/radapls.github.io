---
import { getCollection } from 'astro:content';
import { useTranslations, type Lang } from 'src/i18n';

const lang = Astro.currentLocale as Lang;
const t = useTranslations(lang);

const posts = await getCollection('blog', ({ id }) => id.startsWith(`${lang}/`));
const latestPost = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime())[0];
---

{latestPost && (
  <div class="latest-post-banner" id="latest-post-banner">
    <div class="banner-content">
      <span class="banner-label">
        {t({ en: 'ğŸ“ Latest Post:', es: 'ğŸ“ Ãšltima PublicaciÃ³n:', 'pt-br': 'ğŸ“ Ãšltima Postagem:' })}
      </span>
      <a href={`/${lang}/blog/${latestPost.id.split('/').slice(1).join('/')}`} class="banner-link">
        {latestPost.data.title}
      </a>
      <button class="banner-close" id="banner-close" aria-label="Close banner">âœ•</button>
    </div>
  </div>
)}

<style>
  .latest-post-banner {
    width: 100%;
    background: linear-gradient(135deg, var(--first-color) 0%, var(--first-color-alt) 100%);
    padding: 1rem 2rem;
    text-align: center;
  }

  .latest-post-banner.hidden {
    display: none;
  }

  .banner-content {
    max-width: 1024px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .banner-label {
    color: #fff;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .banner-link {
    color: #fff;
    text-decoration: underline;
    font-weight: 500;
    transition: opacity 0.3s ease;
  }

  .banner-link:hover {
    opacity: 0.8;
  }

  .banner-close {
    background: none;
    border: none;
    color: #fff;
    font-size: 1.25rem;
    cursor: pointer;
    padding: 0 0.5rem;
    line-height: 1;
    transition: opacity 0.3s ease;
  }

  .banner-close:hover {
    opacity: 0.7;
  }

  @media screen and (max-width: 768px) {
    .latest-post-banner {
      padding: 0.75rem 1rem;
    }

    .banner-label,
    .banner-link {
      font-size: 0.875rem;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const banner = document.getElementById('latest-post-banner');
    const closeBtn = document.getElementById('banner-close');

    if (banner && closeBtn) {
      if (localStorage.getItem('bannerDismissed') === 'true') {
        banner.classList.add('hidden');
      } else if (window.innerWidth > 768) {
        document.body.style.paddingTop = '72px';
      }

      closeBtn.addEventListener('click', () => {
        banner.classList.add('hidden');
        if (window.innerWidth > 768) {
          document.body.style.paddingTop = '0';
        }
        localStorage.setItem('bannerDismissed', 'true');
      });
    }
  });
</script>
